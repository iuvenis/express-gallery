extends ./layout.jade

block title
  title Register

block content

  div#suroundingReg
    div#regTitle
      p Make an Account
    form#regForm(method='POST' action='/register')
      input(name='username' placeholder='Username' required autofocus)
      input(name='password' pattern='.{6,}' type='password' placeholder='Password' required title='Password must have at least six characters')
      div(class='errors')
        p #{errors}
      button.button Register